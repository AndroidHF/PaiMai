<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_main_menu_1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/main_menu_1_sel" />

        <ImageView
            android:id="@+id/iv_main_menu_2"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/main_menu_2" />

        <ImageView
            android:id="@+id/iv_main_menu_3"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/main_menu_3" />

        <ImageView
            android:id="@+id/iv_main_menu_4"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/main_menu_4" />

        <ImageView
            android:id="@+id/iv_main_menu_5"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:src="@drawable/main_menu_5" />

    </LinearLayout>


</RelativeLayout>