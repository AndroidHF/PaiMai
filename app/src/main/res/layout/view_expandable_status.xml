<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray">

    <LinearLayout
        android:id="@+id/ll_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_alignParentTop="true"
        android:background="#BCBCBC"
        android:orientation="vertical" />

    <FrameLayout
        android:id="@+id/view_expandable_headerlayout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_divider_1"
        android:paddingBottom="@dimen/types_lay_padding_half">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="状态"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size" />

                <ImageView
                    android:id="@+id/iv_expand_icon_status"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dip"
                    android:src="@drawable/usercenter_notice_arrow_down" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_status_1"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="全新"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />


                <TextView
                    android:id="@+id/tv_status_2"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="未使用"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_status_3"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="9成新"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />


                <TextView
                    android:id="@+id/tv_status_4"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="仅拆封"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/view_expandable_contentLayout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_expandable_headerlayout_status"
        android:paddingBottom="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_status_5"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="无明显使用痕迹"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />


                <TextView
                    android:id="@+id/tv_status_6"
                    android:layout_width="@dimen/status_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="@dimen/status_top_bottom_padding"
                    android:paddingTop="@dimen/status_top_bottom_padding"
                    android:text="有使用痕迹"
                    android:textColor="@color/black_tv"
                    android:textSize="@dimen/commen_tv_size_smaller" />

            </LinearLayout>
