<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="28dip"
        android:layout_width="180dip"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_show_menu"
            android:layout_width="88dip"
            android:layout_height="53dip"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/show_main_menu" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_show_menu_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/all_menu_show" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="全部"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_show_menu_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="漫画"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="BD、DVD"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="游戏"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="书籍"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_show_menu_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="周边"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="手办、模型"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="音乐、演出"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/show_menu_8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="服装、COS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_show_menu_9"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/show_menu_hight"
                    android:layout_marginTop="7dip"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25dip">

                    <ImageView
                        android:layout_width="@dimen/show_menu_width"
                        android:layout_height="@dimen/show_menu_width"
                        android:src="@drawable/another_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="其他"
                        android:textColor="@color/white"
                        android:textSize="@dimen/commen_tv_size" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</RelativeLayout>