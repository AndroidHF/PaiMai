<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_user_not_login_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_header_not_login"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:background="@color/orange"
        android:visibility="visible">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/default_image_touxiang" />

        <RelativeLayout
            android:id="@+id/rl_action_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_image"
            android:layout_marginTop="25dip"
            android:gravity="center">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="125dip"
                android:layout_height="30dip"
                android:layout_toLeftOf="@+id/tv_or"
                android:background="@drawable/usercenter_login_btn_bg"
                android:text="登录" />

            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="18dip"
                android:layout_marginRight="18dip"
                android:text="OR"
                android:textColor="@color/black_tv"
                android:textSize="10dip" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="125dip"
                android:layout_height="30dip"
                android:layout_toRightOf="@id/tv_or"
                android:background="@drawable/usercenter_register_btn_bg"
                android:text="注册" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_login_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_action_lay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dip"
            android:text="※登录个人账户您才能享受更多会员功能"
            android:textColor="@color/black_tv"
            android:textSize="11dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_top_header_login"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:visibility="gone"
        android:background="@color/orange">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:src="@drawable/default_image_tou"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:textColor="@color/black_tv" />

        <TextView
            android:id="@+id/tv_user_desc"
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_below="@id/tv_user_name"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/usercenter_user_desc"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="17dip"
            android:text="这个用户懒，什么都没有留下"
            android:textColor="@color/black_tv" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="163dip"
            android:layout_height="30dip"
            android:layout_marginRight="-2dip"
            android:src="@drawable/usercenter_menu_bg_sel" />

        <ImageView
            android:id="@+id/iv_notice"
            android:layout_width="163dip"
            android:layout_height="30dip"
            android:layout_marginLeft="-2dp"
            android:src="@drawable/usercenter_notice_bg" />
    </LinearLayout>

</LinearLayout>