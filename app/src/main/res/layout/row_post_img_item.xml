<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_lay_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_icon_1"
            android:layout_width="37dip"
            android:layout_height="32dip"
            android:src="@drawable/main_menu_gexinghua" />

        <ImageView
            android:id="@+id/iv_menu_all_icon_1"
            android:layout_width="40dip"
            android:layout_height="45dip"
            android:src="@drawable/main_menu_all"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_menu_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:textColor="@color/black"
            android:textSize="@dimen/commen_padding_smaller" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lay_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_icon_2"
            android:layout_width="37dip"
            android:layout_height="32dip"
            android:src="@drawable/main_menu_gexinghua" />

        <ImageView
            android:id="@+id/iv_menu_all_icon_2"
            android:layout_width="40dip"
            android:layout_height="45dip"
            android:src="@drawable/main_menu_all"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_menu_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:textColor="@color/black"
            android:textSize="@dimen/commen_padding_smaller" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_lay_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_menu_icon_3"
            android:layout_width="37dip"
            android:layout_height="32dip"
            android:src="@drawable/main_menu_gexinghua" />

        <ImageView
            android:id="@+id/iv_menu_all_icon_3"
            android:layout_width="40dip"
            android:layout_height="45dip"
            android:src="@drawable/main_menu_all"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_menu_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:textColor="@color/black"
            android:textSize="@dimen/commen_padding_smaller" />
    </LinearLayout>


</LinearLayout>