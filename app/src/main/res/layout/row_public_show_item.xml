<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip">

        <LinearLayout
            android:id="@+id/ll_add_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_marginRight="8dip"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_drag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dip"
                        android:paddingLeft="8dip"
                        android:paddingRight="8dip"
                        android:src="@drawable/public_show_menu" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dip"
                        android:paddingRight="8dip"
                        android:src="@drawable/public_show_delete" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/iv_add_item"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:background="@drawable/shape_orange_black"
                android:padding="2dip">


                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside" />

                <LinearLayout
                    android:id="@+id/ll_add1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:text="在文章中插入一张图片"
                    android:textColor="@color/black_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:padding="8dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/public_show_add" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/up_refresh_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="27dip"
                    android:layout_height="27dip"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:padding="3dip"
                    android:src="@drawable/faceshow_close_red"
                    android:visibility="gone" />


            </FrameLayout>

            <EditText
                android:id="@+id/et_input_link"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="http://"
                android:textColor="@color/black_tv"
                android:textSize="@dimen/commen_tv_size"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_input_content"
                android:layout_width="match_parent"
                android:layout_height="130dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="@color/white"
                android:gravity="left"
                android:hint="在文章中插入一段文字"
                android:paddingLeft="10dp"
                android:textColor="@color/black_tv"
                android:textSize="@dimen/commen_tv_size"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
