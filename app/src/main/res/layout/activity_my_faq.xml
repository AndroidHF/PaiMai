<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.buycolle.aicang.ui.view.MyHeader
        android:id="@+id/my_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="@dimen/commen_padding"
        android:layout_marginRight="@dimen/commen_padding"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginRight="-1dip"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_my_ask"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/shape_orange_black"
                android:gravity="center"
                android:text="我的问询"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size_smaller"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_myask_notice_icon"
                android:layout_width="6dip"
                android:layout_height="6dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="51dip"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:visibility="gone"
                android:src="@drawable/point" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_marginLeft="-2dip"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_my_showdao_ask"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/shape_white_black"
                android:gravity="center"
                android:text="我收到的问询"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size_smaller"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_shoudao_notice_icon"
                android:layout_width="6dip"
                android:layout_height="6dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37dip"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:visibility="gone"
                android:src="@drawable/point" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#BCBCBC" />

    <com.buycolle.aicang.ui.view.FixedViewPager
        android:id="@+id/vp_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" />
</LinearLayout>