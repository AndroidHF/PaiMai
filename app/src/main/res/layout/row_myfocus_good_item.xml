<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="@drawable/shape_white_black"
        android:padding="10dip">

        <FrameLayout
            android:id="@+id/fl_good_image"
            android:layout_width="110dip"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_good_image"
                android:layout_width="110dip"
                android:layout_height="110dip"
                android:scaleType="centerCrop"
                android:src="@drawable/default_image" />
            <ImageView
                android:id="@+id/iv_range"
                android:layout_width="30dip"
                android:layout_height="20dip"
                android:layout_gravity="right|top"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/post_rare_icon" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:layout_toLeftOf="@+id/iv_star_icon"
            android:layout_toRightOf="@id/fl_good_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="物品的标题物品的标题物品的标题"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size" />

            <TextView
                android:id="@+id/tv_good_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dip"
                android:background="@drawable/shape_orange_black"
                android:paddingBottom="3dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="3dip"
                android:text="全 新"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size_smaller" />

            <TextView
                android:id="@+id/tv_good_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="一些介绍一些一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍一些介绍"
                android:textColor="@color/gray_tv"
                android:textSize="@dimen/commen_tv_size_smaller" />


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_star_icon"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/myfocus_star" />
    </RelativeLayout>


</LinearLayout>