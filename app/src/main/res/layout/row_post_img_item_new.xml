<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/ll_lay_1"
        android:layout_width="100dip"
        android:layout_height="115dip"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/ll_add_item"
                android:layout_width="90dip"
                android:layout_height="115dip"
                android:background="@drawable/post_addpic_small_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_menu_icon_1"
                    android:layout_width="90dip"
                    android:layout_height="115dip"
                    android:padding="2dip"
                    android:scaleType="centerInside"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_menu_icon_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/up_refresh_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_gravity="right|top"
                android:padding="5dip"
                android:src="@drawable/faceshow_close_red"
                android:visibility="gone"/>
        </FrameLayout>

    </FrameLayout>

</LinearLayout>