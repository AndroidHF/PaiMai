<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.buycolle.aicang.ui.view.MyHeader
        android:id="@+id/my_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_comment"
            android:layout_width="105dip"
            android:layout_height="25dip"
            android:layout_marginRight="-1dip"
            android:background="@drawable/shape_orange_black"
            android:gravity="center"
            android:text="全部评论  "
            android:textColor="@color/black"
            android:textSize="@dimen/commen_tv_size_smaller"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_good_comment"
            android:layout_width="105dip"
            android:layout_height="25dip"
            android:layout_marginLeft="-2dip"
            android:layout_marginRight="-2dip"
            android:background="@drawable/shape_white_black"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:src="@drawable/comment_good" />

            <TextView
                android:id="@+id/tv_good_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size_smaller"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bad_comment"
            android:layout_width="105dip"
            android:layout_height="25dip"
            android:layout_marginLeft="-1dip"
            android:background="@drawable/shape_white_black"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:src="@drawable/comment_bad" />

            <TextView
                android:id="@+id/tv_bad_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/commen_tv_size_smaller"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <com.buycolle.aicang.ui.view.FixedViewPager
        android:id="@+id/vp_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray" />
</LinearLayout>